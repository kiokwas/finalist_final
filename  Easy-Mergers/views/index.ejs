<!DOCTYPE html>
<html lang="en">
<head>
  <title>Easy Mergers</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #111, #222, #111);
      font-family: "Poppins", sans-serif;
      color: #fff;
      min-height: 100vh;
      padding-bottom: 50px;
    }

    nav {
      box-shadow: 0 4px 15px rgba(0,0,0,0.4);
    }

    .main-box {
      background: rgba(255, 255, 255, 0.08);
      border-radius: 15px;
      padding: 30px;
      margin-top: 30px;
      backdrop-filter: blur(10px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.5);
    }

    h1, h2 {
      font-weight: 600;
      color: #ffe066;
    }

    input[type="text"] {
      border-radius: 8px;
      border: 1px solid #888;
      padding: 10px;
      width: 100%;
      margin-top: 5px;
      margin-bottom: 15px;
      background: rgba(255,255,255,0.15);
      color: #fff;
    }

    input[type="submit"], button {
      background-color: #ffe066;
      border: none;
      border-radius: 8px;
      padding: 10px 18px;
      color: #111;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
    }

    input[type="submit"]:hover, button:hover {
      background-color: #ffd43b;
      transform: translateY(-2px);
    }

    .company-list {
      list-style: none;
      padding: 0;
    }

    .company-list li {
      background: rgba(255,255,255,0.1);
      padding: 12px 15px;
      margin: 8px 0;
      border-radius: 8px;
      font-family: monospace;
      color: #eee;
      border-left: 4px solid #ffe066;
    }

    label {
      margin-left: 8px;
    }
  </style>
</head>

<body>

<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
  <a class="navbar-brand" href="#"><i class="fa fa-balance-scale"></i> Easy Mergers</a>
</nav>

<div class="container">
  <div class="main-box">
    <h1>Welcome User <%= userID %>!</h1>
    <p>Use our futuristic companyâ€‘merging software to bypass paperwork instantly.</p>

    <form id="attributeForm" onsubmit="submitForm(event)">
      <h4>Add Attributes</h4>

      <div id="attributeInputs">
        <div class="attribute-input">
          <input type="text" name="attribute[]" placeholder="Attribute Name">
          <input type="text" name="value[]" placeholder="Value">
        </div>
      </div>

      <button type="button" onclick="addAttribute()">+ Add Attribute</button>
      <br><br>

      <input type="checkbox" id="absorbCheckbox" name="absorbCheckbox" onchange="toggleField()">
      <label for="absorbCheckbox">Absorb into Company #</label>

      <input type="text" name="num" id="num" disabled placeholder="Company ID">

      <br><br>
      <input type="submit" value="Create Company">
    </form>

    <h2 class="mt-5">List of Your Companies</h2>
    <div id="companyData"></div>
  </div>
</div>

<script>
  function toggleField() {
    var field = document.getElementById('num');
    field.disabled = !document.getElementById('absorbCheckbox').checked;
  }

  function displayCompanies() {
    fetch('/api/getAll')
      .then(r => r.json())
      .then(data => {
        let box = document.getElementById('companyData');
        box.innerHTML = "";

        if (!data || data.length === 0) {
          box.innerHTML = "<p>No data available.</p>";
          return;
        }

        var ul = document.createElement("ul");
        ul.className = "company-list";

        data.forEach(obj => {
          var li = document.createElement("li");
          li.textContent = JSON.stringify(obj);
          ul.appendChild(li);
        });

        box.appendChild(ul);
      })
      .catch(err => {
        console.error(err);
        document.getElementById('companyData').innerHTML = "Error fetching data.";
      });
  }

  function addAttribute() {
    var container = document.getElementById("attributeInputs");
    var div = document.createElement("div");
    div.innerHTML = `
      <div class="attribute-input">
        <input type="text" name="attribute[]" placeholder="Attribute">
        <input type="text" name="value[]" placeholder="Value">
      </div>`;
    container.appendChild(div);
  }

  function submitForm(event) {
    event.preventDefault();

    var attributes = [];
    var values = [];
    var a = document.getElementsByName("attribute[]");
    var v = document.getElementsByName("value[]");

    for (let i = 0; i < a.length; i++) {
      attributes.push(a[i].value);
      values.push(v[i].value);
    }

    var payload = { attributes, values };

    var endpoint = '/api/makeCompany';
    if (document.getElementById("absorbCheckbox").checked) {
      endpoint = '/api/absorbCompany/' + document.getElementById('num').value;
    }

    fetch(endpoint, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    })
    .then(res => {
      if (res.ok) {
        alert("Form submitted!");
        displayCompanies();
      } else {
        alert("Failed to submit form.");
      }
    })
    .catch(() => alert("An error occurred."));
  }

  displayCompanies();
</script>

</body>
</html>
